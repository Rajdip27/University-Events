@model UniversityEvents.Application.ViewModel.StudentRegistrationVm
@{
    ViewData["Title"] = "Registration Successful!";
}

<div class="min-vh-100 bg-gradient-to-b from-emerald-50 via-white to-emerald-50 py-8">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">

                <!-- Success Card -->
                <div class="card border-0 shadow-2xl rounded-4xl overflow-hidden text-center">
                    <!-- Top Gradient Banner -->
                    <div class="bg-gradient-to-r from-emerald-500 to-teal-600 py-8 px-6 text-white">
                        <div class="mb-5">
                            <i class="fas fa-check-circle fa-5x animate__animated animate__bounceIn"></i>
                        </div>
                        <h1 class="display-4 fw-bold mb-3">Registration Successful!</h1>
                        <p class="fs-3 fw-medium opacity-95">@Model.Event?.Name</p>
                        <p class="fs-5 opacity-90">
                            <i class="fas fa-calendar-check me-2"></i>
                            @Model.Event?.EndDate.ToUserTime().ToString("dddd, dd MMMM yyyy • hh:mm tt")
                        </p>
                    </div>

                    <!-- Success Details -->
                    <div class="card-body p-7 bg-white">
                        <div class="bg-emerald-50 border border-emerald-200 rounded-3xl p-6 mb-6">
                            <h3 class="fw-bold text-emerald-800 mb-4">
                                <i class="fas fa-user-check me-2"></i>
                                Welcome, @Model.FullName!
                            </h3>
                            <div class="row text-start g-4 fs-5 text-gray-700">
                                <div class="col-sm-6">
                                    <strong>Student ID:</strong> <span class="text-emerald-700 fw-bold">@Model.IdCardNumber</span>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Department:</strong> @Model.Department
                                </div>
                                <div class="col-sm-6">
                                    <strong>Email:</strong> @Model.Email
                                </div>
                                <div class="col-sm-6">
                                    <strong>Phone:</strong> @Model.PhoneNumber
                                </div>
                            </div>
                        </div>

                        <!-- QR Code Placeholder (you can generate real one in controller) -->
                        <div class="mb-6 p-5 bg-light rounded-3xl border-2 border-dashed border-emerald-300">
                            <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=EventHub_@(Model.IdCardNumber)_@(Model.EventId)"
                                 alt="Your Event QR Code" class="img-fluid rounded shadow" />
                            <p class="mt-4 text-muted fw-medium">
                                <i class="fas fa-qrcode me-2 text-emerald-600"></i>
                                Show this QR code at the entrance
                            </p>
                        </div>

                        <div class="alert alert-success border-0 shadow-sm" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Your registration has been confirmed. A confirmation email has been sent to <strong>@Model.Email</strong>
                        </div>

                        <!-- PREMIUM TWO BUTTONS AT BOTTOM -->
                        <div class="d-grid d-md-flex gap-4 justify-content-center mt-7">
                            <a asp-controller="Student" asp-action="MyEvents"
                               class="btn btn-lg rounded-pill px-6 py-4 fw-bold text-white shadow-lg flex-1"
                               style="background: linear-gradient(135deg, #10b981, #14b8a6); min-height: 68px; font-size: 1.25rem;">
                                <i class="fas fa-ticket-alt me-3"></i>
                                Go to My Events
                            </a>

                            <a asp-controller="Home" asp-action="Index"
                               class="btn btn-lg rounded-pill px-6 py-4 fw-bold shadow-lg flex-1 border-3"
                               style="background: transparent; border: 3px solid #10b981; color: #10b981; min-height: 68px; font-size: 1.25rem;">
                                <i class="fas fa-home me-3"></i>
                                Back to Home
                            </a>
                        </div>

                        <div class="text-center mt-6">
                            <small class="text-muted">
                                Need help? Contact us at
                                <a href="mailto:events@university.edu" class="text-emerald-600 fw-semibold">events@university.edu</a>
                            </small>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Animate.css for bounce effect -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}