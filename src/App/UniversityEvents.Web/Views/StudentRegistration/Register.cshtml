@model UniversityEvents.Application.ViewModel.StudentRegistrationVm
@{
    ViewData["Title"] = "Register for Event";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<style>
    :root {
        --bg-primary: #0a0012;
        --bg-deep: #0f001f;
        --text-primary: #f0f4ff;
        --text-secondary: #c0c9ff;
        --neon-pink: #ff2eff;
        --neon-cyan: #00faff;
        --neon-violet: #9d00ff;
        --neon-green: #39ff14;
        --card-bg: rgba(20, 10, 40, 0.82);
        --card-border: rgba(157, 0, 255, 0.28);
        --glow-pink: 0 0 30px rgba(255,46,255,0.5);
        --glow-cyan: 0 0 40px rgba(0,250,255,0.45);
        --glow-strong: 0 0 60px rgba(157,0,255,0.7), 0 0 100px rgba(0,250,255,0.4);
        --radius: 28px;
        --transition: all 0.7s cubic-bezier(0.23, 1, 0.32, 1);
    }

    body {
        background: var(--bg-primary);
        color: var(--text-primary);
        min-height: 100vh;
        margin: 0;
        font-family: 'Inter', system-ui, sans-serif;
        overflow-x: hidden;
        position: relative;
    }

    /* Background - same cyber orbs */
    .bg-cyber {
        position: fixed;
        inset: 0;
        z-index: -2;
        pointer-events: none;
        background: radial-gradient(circle at 20% 30%, rgba(157,0,255,0.12), transparent 45%), radial-gradient(circle at 80% 70%, rgba(0,250,255,0.10), transparent 55%);
    }

        .bg-cyber::before,
        .bg-cyber::after,
        .bg-cyber span {
            content: '';
            position: absolute;
            border-radius: 50%;
            filter: blur(110px);
            opacity: 0.22;
            animation: neuralPulse 80s infinite ease-in-out;
            background: radial-gradient(circle, var(--neon-violet) 20%, var(--neon-cyan) 70%, transparent);
        }

        .bg-cyber::before {
            width: 1000px;
            height: 1000px;
            top: -25%;
            left: -25%;
            animation-delay: 0s;
        }

        .bg-cyber::after {
            width: 1200px;
            height: 1200px;
            bottom: -30%;
            right: -30%;
            animation-delay: 25s;
        }

        .bg-cyber span {
            width: 800px;
            height: 800px;
            top: 50%;
            left: 50%;
            animation-delay: 12s;
            animation-duration: 95s;
        }

    @@keyframes neuralPulse {
        0% {
            transform: translate(0,0) scale(1);
            opacity: 0.22;
        }

        20% {
            transform: translate(220px, -180px) scale(1.15);
            opacity: 0.32;
        }

        40% {
            transform: translate(-200px, 220px) scale(0.9);
            opacity: 0.18;
        }

        60% {
            transform: translate(150px, -130px) scale(1.08);
            opacity: 0.28;
        }

        80% {
            transform: translate(-100px, 100px) scale(0.95);
            opacity: 0.20;
        }

        100% {
            transform: translate(0,0) scale(1);
            opacity: 0.22;
        }
    }

    .register-container {
        padding: 6rem 1.5rem 4rem;
        position: relative;
        z-index: 1;
        max-width: 1100px;
        margin: 0 auto;
    }

    .register-glass {
        background: var(--card-bg);
        backdrop-filter: blur(24px) saturate(200%);
        -webkit-backdrop-filter: blur(24px) saturate(200%);
        border: 1px solid var(--card-border);
        border-radius: var(--radius);
        box-shadow: inset 0 2px 0 rgba(255,255,255,0.1), var(--glow-pink);
        overflow: hidden;
        animation: cardEnter 1.2s forwards cubic-bezier(0.22, 0.61, 0.36, 1);
    }

    @@keyframes cardEnter {
        from {
            opacity: 0;
            transform: translateY(60px) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .register-header {
        background: linear-gradient(135deg, rgba(157,0,255,0.3), rgba(0,250,255,0.2));
        padding: 4rem 3rem 5rem;
        text-align: center;
        position: relative;
        border-bottom: 1px solid var(--card-border);
    }

        .register-header h2 {
            font-size: 3rem;
            font-weight: 900;
            margin: 0;
            background: linear-gradient(90deg, var(--neon-cyan), var(--neon-pink), var(--neon-violet));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 40px rgba(157,0,255,0.6);
        }

    .register-event-card {
        margin: -4rem 2rem 3rem;
        background: rgba(30, 20, 50, 0.75);
        backdrop-filter: blur(16px);
        border-radius: var(--radius);
        padding: 2.5rem;
        border: 1px solid var(--card-border);
        box-shadow: var(--glow-strong);
        position: relative;
    }

    .register-event-header {
        font-size: 1.5rem;
        font-weight: 900;
        color: var(--neon-cyan);
        margin-bottom: 1.8rem;
        text-shadow: 0 0 15px rgba(0,250,255,0.5);
    }

    .event-item {
        display: flex;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px dashed rgba(157,0,255,0.25);
        transition: var(--transition);
    }

        .event-item:hover {
            transform: translateX(10px);
        }

        .event-item i {
            font-size: 1.8rem;
            color: var(--neon-pink);
            margin-right: 1.2rem;
            min-width: 40px;
        }

    .event-label {
        font-size: 0.95rem;
        color: var(--text-secondary);
        margin: 0;
    }

    .event-value {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
    }

    .free-text {
        color: var(--neon-green);
        text-shadow: 0 0 15px rgba(57,255,20,0.6);
    }

    /* Form fields */
    .form-section {
        padding: 0 3rem 3rem;
    }

        .form-section h4 {
            font-size: 1.8rem;
            font-weight: 900;
            color: var(--neon-violet);
            margin: 2rem 0 1.5rem;
            text-shadow: 0 0 20px rgba(157,0,255,0.4);
        }

    .aqn-field {
        position: relative;
        margin-bottom: 2.2rem;
    }

        .aqn-field input,
        .aqn-field select {
            width: 100%;
            height: 62px;
            padding: 0 1.8rem 0 4.2rem;
            border-radius: 20px;
            background: rgba(30,20,50,0.6);
            border: 1px solid var(--card-border);
            color: var(--text-primary);
            font-size: 1.05rem;
            transition: var(--transition);
        }

            .aqn-field input:focus,
            .aqn-field select:focus {
                border-color: var(--neon-cyan);
                box-shadow: var(--glow-cyan);
                background: rgba(30,20,50,0.85);
                transform: translateY(-4px);
            }

    .aqn-icon {
        position: absolute;
        left: 1.4rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.4rem;
        color: var(--neon-pink);
        pointer-events: none;
    }

    .aqn-label {
        position: absolute;
        left: 4.2rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-secondary);
        font-size: 1.05rem;
        pointer-events: none;
        transition: var(--transition);
    }

    input:focus ~ .aqn-label,
    input:not(:placeholder-shown) ~ .aqn-label {
        top: -0.8rem;
        left: 1.6rem;
        font-size: 0.9rem;
        background: var(--bg-deep);
        padding: 0 0.6rem;
        color: var(--neon-cyan);
    }

    /* Upload */
    .upload-box {
        border: 3px dashed var(--neon-cyan);
        border-radius: var(--radius);
        padding: 4rem 2rem;
        text-align: center;
        background: rgba(30,20,50,0.5);
        transition: var(--transition);
        cursor: pointer;
    }

        .upload-box:hover,
        .upload-box.dragover {
            border-color: var(--neon-pink);
            background: rgba(157,0,255,0.1);
            box-shadow: var(--glow-pink);
            transform: scale(1.02);
        }

    .preview img {
        width: 180px;
        height: 180px;
        border-radius: 20px;
        object-fit: cover;
        border: 2px solid var(--neon-cyan);
        box-shadow: var(--glow-cyan);
        margin: 1.5rem 0;
    }

    /* Buttons */
    .action-btn {
        background: linear-gradient(90deg, var(--neon-pink), var(--neon-cyan));
        color: #000;
        padding: 1.2rem 2.8rem;
        border: none;
        border-radius: 50px;
        font-size: 1.15rem;
        font-weight: 900;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: var(--glow-pink);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .action-btn:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: var(--glow-strong);
        }

    .back-btn {
        background: transparent;
        border: 2px solid var(--neon-cyan);
        color: var(--neon-cyan);
        padding: 1.2rem 2.5rem;
        border-radius: 50px;
        font-size: 1.15rem;
        font-weight: 700;
        transition: var(--transition);
    }

        .back-btn:hover {
            background: var(--neon-cyan);
            color: #000;
            box-shadow: var(--glow-cyan);
        }

    .error-msg {
        color: #ff4d4d;
        font-size: 0.95rem;
        margin-top: -1rem;
        margin-bottom: 1.2rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .register-container {
            padding: 5rem 1rem 3rem;
        }

        .form-section {
            padding: 0 1.5rem 2.5rem;
        }

        .register-header h2 {
            font-size: 2.4rem;
        }

        .register-event-card {
            margin: -3rem 1rem 2rem;
            padding: 2rem;
        }
    }

    @@media (max-width: 480px) {
        .register-header h2 {
            font-size: 2rem;
        }

        .action-btn, .back-btn {
            width: 100%;
            margin-bottom: 1rem;
        }
    }
</style>

<div class="bg-cyber"><span></span></div>

<lottie-player src="https://assets1.lottiefiles.com/packages/lf20_q5pk6p1k.json"
               class="position-fixed w-100 h-100"
               style="z-index: -1; opacity: 0.18;"
               background="transparent"
               speed="0.4"
               loop
               autoplay>
</lottie-player>

<div class="register-container">
    <div class="register-glass">
        <div class="register-header">
            <h2>Register for Event</h2>
        </div>

        <div class="register-event-card">
            <div class="register-event-header"><i class="fas fa-star"></i> Event Overview</div>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="event-item">
                        <i class="fas fa-bullhorn"></i>
                        <div>
                            <p class="event-label">Event Name</p>
                            <p class="event-value">@Model.Event?.Name</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="event-item">
                        <i class="fas fa-ticket-alt"></i>
                        <div>
                            <p class="event-label">Registration</p>
                            <p class="event-value">
                                @if (Model.Event?.IsFree == true)
                                {
                                    <span class="free-text">FREE</span>
                                }
                                else
                                {
                                    @Model.Event?.RegistrationFee.ToString("C")
                                }
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="event-item">
                        <i class="fas fa-calendar-day"></i>
                        <div>
                            <p class="event-label">Start Date</p>
                            <p class="event-value">@Model.Event?.StartDate.ToUserTime().ToString("dd MMMM yyyy")</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="event-item">
                        <i class="fas fa-calendar-check"></i>
                        <div>
                            <p class="event-label">End Date</p>
                            <p class="event-value">@Model.Event?.EndDate.ToUserTime().ToString("dd MMMM yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <form asp-action="Register" asp-controller="StudentRegistration" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="EventId" value="@Model.Event.Id" />

                <h4>Personal Information</h4>
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="aqn-field">
                            <i class="fas fa-user aqn-icon"></i>
                            <input asp-for="FullName" placeholder=" " />
                            <label class="aqn-label">Full Name</label>
                        </div>
                        <span asp-validation-for="FullName" class="error-msg"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="aqn-field">
                            <i class="fas fa-id-card aqn-icon"></i>
                            <input asp-for="IdCardNumber" placeholder=" " />
                            <label class="aqn-label">Student ID</label>
                        </div>
                        <span asp-validation-for="IdCardNumber" class="error-msg"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="aqn-field">
                            <i class="fas fa-phone aqn-icon"></i>
                            <input asp-for="PhoneNumber" placeholder=" " />
                            <label class="aqn-label">Phone Number</label>
                        </div>
                        <span asp-validation-for="PhoneNumber" class="error-msg"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="aqn-field">
                            <i class="fas fa-envelope aqn-icon"></i>
                            <input asp-for="Email" type="email" placeholder=" " />
                            <label class="aqn-label">University Email</label>
                        </div>
                        <span asp-validation-for="Email" class="error-msg"></span>
                    </div>
                    <div class="col-12">
                        <div class="aqn-field">
                            <i class="fas fa-graduation-cap aqn-icon"></i>
                            <input asp-for="Department" placeholder=" " />
                            <label class="aqn-label">Department</label>
                        </div>
                        <span asp-validation-for="Department" class="error-msg"></span>
                    </div>
                </div>

                <h4>Upload Your Photo</h4>
                <div id="uploadZone" class="upload-box">
                    <input asp-for="ImageFile" type="file" accept="image/*" id="photoInput" class="d-none" />
                    <i class="fas fa-cloud-upload-alt fa-3x mb-3" style="color: var(--neon-cyan);"></i>
                    <p class="fw-bold">Click or Drag & Drop Photo</p>
                    <p style="color: var(--text-secondary);">PNG / JPG — Max 5MB</p>
                </div>
                <span asp-validation-for="ImageFile" class="error-msg"></span>

                <div id="previewArea" class="preview mt-4 d-none text-center">
                    <img id="previewImg" alt="Preview" />
                    <button type="button" onclick="removePhoto()" class="action-btn mt-3" style="background: #ff4d4d; color: white;">
                        <i class="fas fa-trash"></i> Remove
                    </button>
                </div>

                <div class="form-check mt-5 p-4 rounded-4" style="background: rgba(30,20,50,0.5); border: 1px solid var(--card-border);">
                    <input type="checkbox" class="form-check-input" id="terms" required style="accent-color: var(--neon-cyan);">
                    <label for="terms" class="form-check-label ms-2">
                        I agree to the <a href="#" style="color: var(--neon-cyan);">Terms</a> &
                        <a href="#" style="color: var(--neon-cyan);">Privacy Policy</a>
                    </label>
                </div>

                <div class="d-flex flex-wrap justify-content-between gap-3 mt-5">
                    <button type="button" onclick="history.back()" class="back-btn">
                        <i class="fas fa-arrow-left"></i> Back
                    </button>
                    <button type="submit" class="action-btn">
                        Submit Registration <i class="fas fa-check ms-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <p class="text-center mt-4" style="color: var(--text-secondary);">
        <i class="fas fa-shield-halved me-2"></i> Your data is encrypted & secure
    </p>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Floating labels
        document.querySelectorAll("input, select").forEach(el => {
            if (el.value.trim()) el.classList.add("filled");
            el.addEventListener("input", () => {
                el.classList.toggle("filled", el.value.trim());
            });
        });

        // Drag & Drop + Preview
        const zone = document.getElementById("uploadZone");
        const input = document.getElementById("photoInput");
        const preview = document.getElementById("previewArea");
        const img = document.getElementById("previewImg");

        zone.addEventListener("click", () => input.click());
        zone.addEventListener("dragover", e => { e.preventDefault(); zone.classList.add("dragover"); });
        zone.addEventListener("dragleave", () => zone.classList.remove("dragover"));
        zone.addEventListener("drop", e => {
            e.preventDefault();
            zone.classList.remove("dragover");
            if (e.dataTransfer.files.length) {
                input.files = e.dataTransfer.files;
                showPreview(e.dataTransfer.files[0]);
            }
        });
        input.addEventListener("change", () => {
            if (input.files.length) showPreview(input.files[0]);
        });

        function showPreview(file) {
            const reader = new FileReader();
            reader.onload = e => {
                img.src = e.target.result;
                preview.classList.remove("d-none");
            };
            reader.readAsDataURL(file);
        }

        window.removePhoto = () => {
            input.value = "";
            preview.classList.add("d-none");
        };
    });

    // Mouse parallax for background
    document.addEventListener('mousemove', e => {
        const x = (e.clientX / window.innerWidth - 0.5) * 80;
        const y = (e.clientY / window.innerHeight - 0.5) * 80;
        document.querySelector('.bg-cyber').style.transform = `translate(${x}px, ${y}px)`;
    });
</script>