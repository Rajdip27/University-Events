@model UniversityEvents.Application.ViewModel.ForgotPassword.ForgotPasswordDto

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="fp-container">
    <div class="fp-card">
        <div class="fp-card-header">
            <h2 class="fp-card-title">Forgot Password?</h2>
            <p class="fp-card-subtitle">No worries, we'll help you reset it</p>
        </div>

        <div class="fp-card-body">
            <form asp-action="ForgotPassword" method="post" class="fp-form">
                <div class="fp-form-group">
                    <label asp-for="Email" class="fp-form-label">Email Address</label>
                    <input asp-for="Email" type="email" class="fp-form-input" placeholder="name@example.com" autocomplete="email" autofocus />
                    <span asp-validation-for="Email" class="fp-form-error"></span>
                </div>

                <button type="submit" class="fp-btn-submit">Send Verification Code</button>
            </form>

            <div class="fp-back-login">
                <small>
                    <a href="@Url.Action("Login", "Account")" class="fp-link-back">← Back to Login</a>
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    /* Container: full viewport, centered flex */
    .fp-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e9fd 100%);
        padding: 1rem;
    }

    /* Card */
    .fp-card {
        width: 100%;
        max-width: 400px;
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0 15px 50px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .fp-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        }

    /* Card Header */
    .fp-card-header {
        background-color: #28a745;
        color: #fff;
        padding: 2rem 1.5rem 1.5rem;
        text-align: center;
    }

    .fp-card-title {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
    }

    .fp-card-subtitle {
        margin-top: 0.5rem;
        font-size: 0.95rem;
        opacity: 0.9;
    }

    /* Card Body */
    .fp-card-body {
        padding: 2rem 1.5rem;
    }

    /* Form */
    .fp-form-group {
        margin-bottom: 1.5rem;
    }

    .fp-form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2d3748;
    }

    .fp-form-input {
        width: 100%;
        height: 50px;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        padding: 0 1rem;
        font-size: 1rem;
        transition: all 0.25s ease;
    }

        .fp-form-input:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.25rem rgba(40,167,69,0.2);
            outline: none;
        }

        .fp-form-input::placeholder {
            color: #a0aec0;
        }

    .fp-form-error {
        display: block;
        margin-top: 0.25rem;
        font-size: 0.85rem;
        color: #dc3545;
    }

    /* Button */
    .fp-btn-submit {
        width: 100%;
        height: 50px;
        border-radius: 12px;
        border: none;
        background-color: #28a745;
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
        transition: all 0.25s ease;
    }

        .fp-btn-submit:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    /* Back link */
    .fp-back-login {
        text-align: center;
        margin-top: 1.5rem;
    }

    .fp-link-back {
        color: #28a745;
        text-decoration: none;
        font-weight: 500;
    }

        .fp-link-back:hover {
            text-decoration: underline;
        }

    /* Responsive */
    @@media (max-width: 480px) {
        .fp-card {
            max-width: 95%;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
