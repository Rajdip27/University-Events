@model UniversityEvents.Application.ViewModel.ForgotPassword.ResetPasswordDto
@{
    ViewData["Title"] = "Reset Password";
}

<style>
    :root {
        --bg-primary: #0a0012;
        --bg-deep: #0f001f;
        --text-primary: #f0f4ff;
        --text-secondary: #c0c9ff;
        --neon-pink: #ff2eff;
        --neon-cyan: #00faff;
        --neon-violet: #9d00ff;
        --neon-green: #39ff14;
        --card-bg: rgba(20, 10, 40, 0.82);
        --card-border: rgba(157, 0, 255, 0.28);
        --glow-pink: 0 0 30px rgba(255,46,255,0.5);
        --glow-cyan: 0 0 40px rgba(0,250,255,0.45);
        --glow-strong: 0 0 60px rgba(157,0,255,0.7), 0 0 100px rgba(0,250,255,0.4);
        --radius: 28px;
        --transition: all 0.7s cubic-bezier(0.23, 1, 0.32, 1);
    }

    body {
        background: var(--bg-primary);
        color: var(--text-primary);
        min-height: 100vh;
        margin: 0;
        font-family: 'Inter', system-ui, sans-serif;
        overflow-x: hidden;
        position: relative;
    }

    /* Background orbs */
    .bg-cyber {
        position: fixed;
        inset: 0;
        z-index: -2;
        pointer-events: none;
        background: radial-gradient(circle at 20% 30%, rgba(157,0,255,0.12), transparent 45%), radial-gradient(circle at 80% 70%, rgba(0,250,255,0.10), transparent 55%);
    }

        .bg-cyber::before,
        .bg-cyber::after,
        .bg-cyber span {
            content: '';
            position: absolute;
            border-radius: 50%;
            filter: blur(110px);
            opacity: 0.22;
            animation: neuralPulse 80s infinite ease-in-out;
            background: radial-gradient(circle, var(--neon-violet) 20%, var(--neon-cyan) 70%, transparent);
        }

        .bg-cyber::before {
            width: 1000px;
            height: 1000px;
            top: -25%;
            left: -25%;
            animation-delay: 0s;
        }

        .bg-cyber::after {
            width: 1200px;
            height: 1200px;
            bottom: -30%;
            right: -30%;
            animation-delay: 25s;
        }

        .bg-cyber span {
            width: 800px;
            height: 800px;
            top: 50%;
            left: 50%;
            animation-delay: 12s;
            animation-duration: 95s;
        }

    @@keyframes neuralPulse {
        0% {
            transform: translate(0,0) scale(1);
            opacity: 0.22;
        }

        20% {
            transform: translate(220px, -180px) scale(1.15);
            opacity: 0.32;
        }

        40% {
            transform: translate(-200px, 220px) scale(0.9);
            opacity: 0.18;
        }

        60% {
            transform: translate(150px, -130px) scale(1.08);
            opacity: 0.28;
        }

        80% {
            transform: translate(-100px, 100px) scale(0.95);
            opacity: 0.20;
        }

        100% {
            transform: translate(0,0) scale(1);
            opacity: 0.22;
        }
    }

    .rp-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem 1rem;
        position: relative;
        z-index: 1;
    }

    .rp-card {
        width: 100%;
        max-width: 460px;
        background: var(--card-bg);
        backdrop-filter: blur(24px) saturate(200%);
        border: 1px solid var(--card-border);
        border-radius: var(--radius);
        box-shadow: inset 0 2px 0 rgba(255,255,255,0.1), var(--glow-pink);
        overflow: hidden;
        animation: cardEnter 1.2s forwards cubic-bezier(0.22, 0.61, 0.36, 1);
    }

    @@keyframes cardEnter {
        from {
            opacity: 0;
            transform: translateY(60px) scale(0.92);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .rp-card-header {
        background: linear-gradient(135deg, rgba(157,0,255,0.4), rgba(0,250,255,0.25));
        padding: 3.5rem 2.5rem 2.5rem;
        text-align: center;
        border-bottom: 1px solid var(--card-border);
    }

    .rp-card-title {
        font-size: 2.8rem;
        font-weight: 900;
        margin: 0 0 0.8rem;
        background: linear-gradient(90deg, var(--neon-cyan), var(--neon-pink), var(--neon-violet));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 40px rgba(157,0,255,0.5);
    }

    .rp-card-subtitle {
        font-size: 1.1rem;
        color: var(--text-secondary);
        margin: 0;
        opacity: 0.9;
    }

    .rp-form {
        padding: 2.5rem 2.5rem 3rem;
    }

    .rp-form-group {
        position: relative;
        margin-bottom: 2.5rem;
    }

    .rp-form-label {
        position: absolute;
        left: 1.8rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-secondary);
        font-size: 1.05rem;
        pointer-events: none;
        transition: var(--transition);
        background: transparent;
        padding: 0;
    }

    .rp-form-input {
        width: 100%;
        height: 62px;
        padding: 0 3.8rem 0 1.8rem;
        border-radius: 20px;
        background: rgba(30,20,50,0.65);
        border: 1px solid var(--card-border);
        color: var(--text-primary);
        font-size: 1.05rem;
        transition: var(--transition);
    }

        .rp-form-input:focus {
            border-color: var(--neon-cyan);
            box-shadow: var(--glow-cyan);
            background: rgba(30,20,50,0.9);
            transform: translateY(-4px);
        }

            .rp-form-input:focus ~ .rp-form-label,
            .rp-form-input.filled ~ .rp-form-label {
                top: -0.8rem;
                left: 1.4rem;
                font-size: 0.9rem;
                background: var(--bg-deep);
                padding: 0 0.6rem;
                color: var(--neon-cyan);
            }

    .rp-password-wrapper {
        position: relative;
    }

    .rp-password-toggle {
        position: absolute;
        right: 1.4rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: var(--neon-cyan);
        font-size: 1.3rem;
        transition: var(--transition);
    }

        .rp-password-toggle:hover {
            color: var(--neon-pink);
            transform: translateY(-50%) scale(1.15);
        }

    .rp-form-error {
        color: #ff4d4d;
        font-size: 0.95rem;
        margin-top: 0.6rem;
        display: block;
    }

    .rp-btn-submit {
        width: 100%;
        height: 58px;
        border: none;
        border-radius: 50px;
        background: linear-gradient(90deg, var(--neon-pink), var(--neon-cyan));
        color: #000;
        font-size: 1.15rem;
        font-weight: 900;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: var(--glow-pink);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .rp-btn-submit:hover {
            transform: translateY(-6px) scale(1.04);
            box-shadow: var(--glow-strong);
        }

    @@media (max-width: 480px) {
        .rp-card {
            max-width: 95%;
        }

        .rp-card-title {
            font-size: 2.3rem;
        }

        .rp-form {
            padding: 2rem 1.8rem 2.5rem;
        }
    }
</style>

<div class="bg-cyber"><span></span></div>

<div class="rp-container">
    <div class="rp-card">
        <div class="rp-card-header">
            <h2 class="rp-card-title">Reset Password</h2>
            <p class="rp-card-subtitle">Create a strong new password</p>
        </div>

        <form asp-action="ResetPassword" method="post" class="rp-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Email" />

            <!-- New Password -->
            <div class="rp-form-group rp-password-group">
                <div class="rp-password-wrapper">
                    <input asp-for="NewPassword" type="password" class="rp-form-input" autocomplete="new-password" placeholder="" />
                    <span class="rp-password-toggle" onclick="togglePassword('NewPassword')">
                        <i class="fa fa-eye"></i>
                    </span>
                </div>
                <label asp-for="NewPassword" class="rp-form-label">New Password</label>
                <span asp-validation-for="NewPassword" class="rp-form-error"></span>
            </div>

            <!-- Confirm Password -->
            <div class="rp-form-group rp-password-group">
                <div class="rp-password-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="rp-form-input" autocomplete="new-password" placeholder="" />
                    <span class="rp-password-toggle" onclick="togglePassword('ConfirmPassword')">
                        <i class="fa fa-eye"></i>
                    </span>
                </div>
                <label asp-for="ConfirmPassword" class="rp-form-label">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="rp-form-error"></span>
            </div>

            <button type="submit" class="rp-btn-submit">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        // Toggle password visibility
        function togglePassword(fieldName) {
            const input = document.querySelector(`input[name="${fieldName}"]`);
            const icon = input.parentElement.querySelector('.rp-password-toggle i');

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        // Floating label: move up on focus (even empty), keep up if value exists
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".rp-form-input").forEach(input => {
                const label = input.parentElement.nextElementSibling; // label after wrapper

                // On focus → always move label up
                input.addEventListener("focus", () => {
                    label.style.top = "-0.8rem";
                    label.style.fontSize = "0.9rem";
                    label.style.background = "var(--bg-deep)";
                    label.style.color = "var(--neon-cyan)";
                    label.style.padding = "0 0.6rem";
                });

                // On blur → return label only if empty
                input.addEventListener("blur", () => {
                    if (!input.value.trim()) {
                        label.style.top = "50%";
                        label.style.fontSize = "1.05rem";
                        label.style.background = "transparent";
                        label.style.color = "var(--text-secondary)";
                        label.style.padding = "0";
                    }
                });

                // On input → keep label up if has value
                input.addEventListener("input", () => {
                    if (input.value.trim()) {
                        label.style.top = "-0.8rem";
                        label.style.fontSize = "0.9rem";
                        label.style.background = "var(--bg-deep)";
                        label.style.color = "var(--neon-cyan)";
                        label.style.padding = "0 0.6rem";
                    }
                });

                // Initial check (if pre-filled somehow)
                if (input.value.trim()) {
                    label.style.top = "-0.8rem";
                    label.style.fontSize = "0.9rem";
                    label.style.background = "var(--bg-deep)";
                    label.style.color = "var(--neon-cyan)";
                    label.style.padding = "0 0.6rem";
                }
            });
        });

        // Mouse parallax
        document.addEventListener('mousemove', e => {
            const x = (e.clientX / window.innerWidth - 0.5) * 80;
            const y = (e.clientY / window.innerHeight - 0.5) * 80;
            document.querySelector('.bg-cyber').style.transform = `translate(${x}px, ${y}px)`;
        });
    </script>
}