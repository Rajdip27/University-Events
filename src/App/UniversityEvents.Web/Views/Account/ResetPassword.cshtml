@using UniversityEvents.Application.ViewModel.ForgotPassword
@model ResetPasswordDto

@{
    ViewData["Title"] = "Reset Password";
}

<div class="rp-container">
    <div class="rp-card">
        <div class="rp-card-header">
            <h2 class="rp-card-title">Reset Your Password</h2>
            <p class="rp-card-subtitle">Please enter your new password below</p>
        </div>

        <form asp-action="ResetPassword" method="post" class="rp-form">
            <input type="hidden" asp-for="Email" />

            <!-- New Password -->
            <div class="rp-form-group rp-password-group">
                <label asp-for="NewPassword" class="rp-form-label">New Password</label>
                <div class="rp-password-wrapper">
                    <input asp-for="NewPassword" type="password" class="rp-form-input" autocomplete="new-password" />
                    <span class="rp-password-toggle" onclick="togglePassword('NewPassword')">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="NewPassword" class="rp-form-error"></span>
            </div>

            <!-- Confirm Password -->
            <div class="rp-form-group rp-password-group">
                <label asp-for="ConfirmPassword" class="rp-form-label">Confirm New Password</label>
                <div class="rp-password-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="rp-form-input" autocomplete="new-password" />
                    <span class="rp-password-toggle" onclick="togglePassword('ConfirmPassword')">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="ConfirmPassword" class="rp-form-error"></span>
            </div>

            <button type="submit" class="rp-btn-submit">Reset Password</button>
        </form>
    </div>
</div>

<!-- CSS -->
<style>
    /* Container */
    .rp-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e9fd 100%);
        padding: 1rem;
    }

    /* Card */
    .rp-card {
        width: 100%;
        max-width: 400px;
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0 15px 50px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .rp-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        }

    /* Card header */
    .rp-card-header {
        background-color: #28a745;
        color: #fff;
        text-align: center;
        padding: 2rem 1.5rem 1.5rem;
    }

    .rp-card-title {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
    }

    .rp-card-subtitle {
        margin-top: 0.5rem;
        font-size: 0.95rem;
        opacity: 0.9;
    }

    /* Form */
    .rp-form {
        padding: 2rem 1.5rem;
    }

    .rp-form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .rp-form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2d3748;
    }

    .rp-form-input {
        width: 100%;
        height: 48px;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        padding: 0 1rem;
        font-size: 1rem;
        transition: all 0.25s ease;
    }

        .rp-form-input:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.25rem rgba(40,167,69,0.2);
            outline: none;
        }

    .rp-form-error {
        display: block;
        margin-top: 0.25rem;
        font-size: 0.85rem;
        color: #dc3545;
    }

    /* Password wrapper */
    .rp-password-wrapper {
        position: relative;
    }

    .rp-password-toggle {
        position: absolute;
        top: 50%;
        right: 12px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #6c757d;
    }

        .rp-password-toggle:hover {
            color: #28a745;
        }

    /* Button */
    .rp-btn-submit {
        width: 100%;
        height: 50px;
        border-radius: 12px;
        border: none;
        background-color: #28a745;
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
        transition: all 0.25s ease;
    }

        .rp-btn-submit:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    @@media (max-width: 480px) {
        .rp-card {
            max-width: 95%;
        }
    }
</style>

<!-- JS: toggle password visibility -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        function togglePassword(fieldName) {
            const input = document.querySelector(`input[name="${fieldName}"]`);
            const icon = input.nextElementSibling.querySelector('i');

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
}
