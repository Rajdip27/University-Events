@using UniversityEvents.Application.ViewModel.ForgotPassword
@model OtpEmailViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f6fa;
            margin: 0;
            padding: 0;
        }

        .email-container {
            max-width: 600px;
            margin: 30px auto;
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .email-header {
            background-color: #4CAF50;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .email-body {
            padding: 30px 20px;
            color: #333333;
            line-height: 1.5;
        }

        .otp-code {
            display: inline-block;
            margin: 20px 0;
            font-size: 28px;
            font-weight: bold;
            color: #4CAF50;
            letter-spacing: 4px;
        }

        .email-footer {
            background-color: #f1f1f1;
            color: #777777;
            text-align: center;
            padding: 15px;
            font-size: 12px;
        }
        @@media only screen and (max-width: 600px) {
            .email-body {
                padding: 20px 15px;
            }

            .otp-code {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            <h2>OTP Verification</h2>
        </div>
        <div class="email-body">
            <p>Hi <strong>@Model.UserName</strong>,</p>
            <p>We received a request to reset your password. Use the OTP below to verify your email address:</p>
            <div class="otp-code">@Model.OTP</div>
            <p>This OTP is valid for 5 minutes. Please do not share it with anyone.</p>
            <p>If you did not request a password reset, you can safely ignore this email.</p>
        </div>
        <div class="email-footer">
            &copy; @DateTime.Now.ToString("yyyy") University Events. All rights reserved.
        </div>
    </div>
</body>
</html>
