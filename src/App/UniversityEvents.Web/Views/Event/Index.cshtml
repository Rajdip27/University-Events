@using UniversityEvents.Application.CommonModel
@using UniversityEvents.Application.Enums
@using UniversityEvents.Application.Helpers
@model UniversityEvents.Application.CommonModel.PaginationModel<UniversityEvents.Application.ViewModel.EventVm>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string currentSearch = Context.Request.Query["search"];
    int sl = ((Model.PageNumber - 1) * Model.PageSize) + 1;
}

<style>
    .smart-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
		border: 1px solid #ffff;
    }

        .smart-table th, .smart-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }

        .smart-table thead th {
            background-color: #f9fafb;
            font-weight: 600;
            color: #111827;
            border-bottom: 2px solid #e5e7eb;
        }

        .smart-table tbody tr:hover {
            background-color: #f3f4f6;
        }

    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid transparent;
        transition: all 0.2s;
    }

    .action-edit {
        color: #2563eb;
        border-color: #dbeafe;
        background: #eff6ff;
    }

        .action-edit:hover {
            background: #2563eb;
            color: #ffffff;
            border-color: #2563eb;
        }

    .action-delete {
        color: #dc2626;
        border-color: #fee2e2;
        background: #fef2f2;
    }

        .action-delete:hover {
            background: #dc2626;
            color: #ffffff;
            border-color: #dc2626;
        }

    .page-header {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        gap: 10px;
    }

        .page-header h4 {
            margin: 0;
            font-weight: 600;
            color: #111827;
        }

        .page-header small {
            color: #6b7280;
        }

    .img-thumb {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 6px;
    }

    /* SEARCH + CREATE CONTAINER */
    .header-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

        .header-actions form {
            display: flex;
            gap: 5px;
            margin: 0;
        }

        .header-actions input {
            width: 200px;
        }
</style>

<div class="px-3 py-3">

    <!-- PAGE HEADER -->
    <div class="page-header">
        <div>
            <h4>Event List</h4>
            <small>Manage your events effectively</small>
        </div>

        <div class="header-actions">
            <!-- SEARCH FORM -->
            <form method="get">
                <input type="text" name="search" class="form-control form-control-sm" placeholder="Search by name..." value="@currentSearch" />
                <button type="submit" class="btn btn-outline-secondary btn-sm">
                    <i class="ri-search-line"></i> 
                </button>
            </form>

            <!-- CREATE BUTTON -->
            <a asp-controller="Event" asp-action="CreateOrEdit" class="btn btn-primary btn-sm d-flex align-items-center gap-1">
                <i class="ri-add-line"></i> Create
            </a>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table smart-table">
            <thead>
                <tr>
                    <th>SL</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Fee</th>
                    <th>Meal Type</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Any())
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@sl</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@Url.Content(UrlHelpers.GetEventImageUrl(item.ImageUrl, CommonVariables.EventLocation))" class="img-thumb" alt="@item.Name" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Category?.Name</td>
                            <td>@item.StartDate.ToUserTime().ToString("dd-MM-yyyy hh:mm tt")</td>
                            <td>@item.EndDate.ToUserTime().ToString("dd-MM-yyyy hh:mm tt")</td>
                            <td>
                                @if (item.IsFree)
                                {
                                    <span class="badge bg-success">Free</span>
                                }
                                else
                                {
                                    <span class="fw-semibold text-dark">
                                        @item.RegistrationFee.ToString("C")
                                    </span>
                                }
                            </td>
                            <td>
                                @{
                                    var meal = (MealType)item.MealsOffered;
                                }

                                @if (meal.HasFlag(MealType.Breakfast))
                                {
                                    <span class="badge bg-warning text-dark me-1">Breakfast</span>
                                }
                                @if (meal.HasFlag(MealType.Lunch))
                                {
                                    <span class="badge bg-success me-1">Lunch</span>
                                }
                                @if (meal.HasFlag(MealType.Dinner))
                                {
                                    <span class="badge bg-primary me-1">Dinner</span>
                                }
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("CreateOrEdit", "Event", new { Id = item.Id })" class="action-btn action-edit" title="Edit">
                                    <i class="ri-edit-line"></i>
                                </a>
                                <form method="post" action="@Url.Action("Delete", "Event", new { Id = item.Id })" onsubmit="return confirm('Are you sure?');" style="display:inline;">
                                    <button type="submit" class="action-btn action-delete" title="Delete">
                                        <i class="ri-delete-bin-6-line"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        sl++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center py-4 text-muted">No data found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    <div class="d-flex justify-content-end mt-3">
        <partial name="_Pagination" model="Model" />
    </div>
</div>
