@model string

@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-5 text-center" style="max-width: 450px;">
        <div class="mb-4">
            <i class="fas fa-times-circle fa-4x text-danger"></i>
        </div>
        <h2 class="text-danger mb-3">Payment Cancelled</h2>
        <p class="text-muted mb-3">Unfortunately, your payment process was cancelled.</p>

        @if (!string.IsNullOrWhiteSpace(Model))
        {
            <p class="fw-bold">Transaction ID: <span class="text-dark">@Model</span></p>
        }

        <a href="/" class="btn btn-outline-danger mt-4 w-100">Back to Home</a>
    </div>
</div>

