@model string

@{
    ViewData["Title"] = "Payment Failed";
}

<style>
    /* Hover effects for buttons */
    .btn:hover {
        transform: translateY(-3px);
        transition: all 0.3s ease;
    }

    /* Icon animation */
    .fail-icon svg {
        animation: shake 0.6s ease-in-out infinite;
    }

    @@keyframes shake {
        0% {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(-10deg);
        }

        50% {
            transform: rotate(10deg);
        }

        75% {
            transform: rotate(-10deg);
        }

        100% {
            transform: rotate(0deg);
        }
    }
</style>

<!-- Background Gradient -->
<div class="bg-gradient-to-r from-red-100 via-red-200 to-red-100 min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg rounded-4 p-5 text-center position-relative" style="max-width: 500px; border: none;">

        <!-- Animated Failure Icon -->
        <div class="mb-4 position-relative">
            <div class="fail-icon mx-auto mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="none" stroke="#dc3545" stroke-width="6" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle">
                    <circle cx="40" cy="40" r="36" stroke-opacity="0.3" />
                    <line x1="28" y1="28" x2="52" y2="52" />
                    <line x1="52" y1="28" x2="28" y2="52" />
                </svg>
            </div>
            <div class="position-absolute top-0 start-50 translate-middle">
                <span class="badge bg-danger fs-6 px-3 py-2 shadow">Payment Failed</span>
            </div>
        </div>

        <h3 class="fw-bold text-danger mb-3">Oops! Payment Could Not Be Completed</h3>
        <p class="text-muted mb-4">Something went wrong during the transaction. Don’t worry, your money is safe. Please try again or contact support if the issue persists.</p>

        @if (!string.IsNullOrWhiteSpace(Model))
        {
            <div class="alert alert-danger d-flex align-items-center justify-content-center shadow-sm" role="alert">
                <strong>Transaction ID:</strong> &nbsp;@Model
            </div>
        }

        <div class="d-flex flex-column gap-2 mt-4">
            <a href="/" class="btn btn-danger btn-lg rounded-pill shadow-sm">Back to Home</a>
            <a href="/Support" class="btn btn-outline-danger btn-lg rounded-pill shadow-sm">Contact Support</a>
        </div>
    </div>
</div>


