<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EventHub</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>

    <!-- HEADER -->
    <header>
        <div class="container">
            <div class="header-content">

                <!-- Logo -->
                <div class="logo">
                    <i class="fas fa-calendar-alt"></i>
                    <span>EventHub</span>
                </div>

                <!-- Navigation -->
                <nav>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Events" asp-action="Index">Events</a></li>
                        <li><a asp-controller="Categories" asp-action="Index">Categories</a></li>
                        <li><a asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                </nav>

                <!-- Login/Register or User Menu -->
                <div class="auth-buttons">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="user-menu">
                            <span class="user-name">@User.Identity.Name</span>

                            <div class="dropdown">
                                <a asp-controller="Account" asp-action="Profile">Profile</a>
                                <a asp-controller="Account" asp-action="Logout">Logout</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="login-btn">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="register-btn">Register</a>
                    }
                </div>

            </div>
        </div>
    </header>

    <!-- MAIN BODY -->
    <main class="main-body">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <p>© @DateTime.Now.Year EventHub — All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>
