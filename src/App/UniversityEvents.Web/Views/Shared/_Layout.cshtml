<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EventHub</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous">
    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --emerald: #10b981;
            --emerald-dark: #059669;
            --teal: #14b8a6;
            --bg-light: #f8f9fa;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-light);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            position: sticky;
            top: 0;
            z-index: 1020;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid #e5e7eb;
            box-shadow: 0 4px 20px rgba(16, 185, 129, 0.1);
        }

        .logo {
            font-weight: 800;
        }

            .logo span {
                background: linear-gradient(135deg, var(--emerald), var(--teal));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .nav-link {
            font-weight: 600;
            color: #374151 !important;
            position: relative;
            transition: color 0.3s;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--emerald) !important;
            }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 3px;
                bottom: -8px;
                left: 50%;
                background: linear-gradient(90deg, var(--emerald), var(--teal));
                border-radius: 2px;
                transform: translateX(-50%);
                transition: width 0.3s;
            }

            .nav-link:hover::after, .nav-link.active::after {
                width: 80%;
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--emerald), var(--teal));
            border: none;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, var(--emerald-dark), #0d9488);
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
            }

        .btn-outline-primary {
            border-color: var(--emerald);
            color: var(--emerald);
            font-weight: 600;
        }

            .btn-outline-primary:hover {
                background: var(--emerald);
                color: white;
            }

        .user-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--emerald), var(--teal));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        footer {
            margin-top: auto;
        }

        main {
            flex: 1 0 auto;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="d-flex align-items-center justify-content-between py-3">
                <!-- Logo -->
                <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none logo">
                    <i class="fas fa-calendar-alt fa-2x me-2" style="color: var(--emerald);"></i>
                    <span class="fs-3">EventHub</span>
                </a>

                <!-- Desktop Nav -->
                <nav class="d-none d-lg-block">
                    <ul class="nav gap-4">
                        <li><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>
                        <!-- Add more links as needed, e.g., Events -->
                    </ul>
                </nav>

                <!-- User Section -->
                <div class="d-flex align-items-center gap-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="dropdown">
                            <button class="btn d-flex align-items-center gap-2 dropdown-toggle p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="border:none;background:transparent;">
                                <div class="user-avatar">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                                <span class="fw-semibold d-none d-md-inline">@User.Identity.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-4 mt-2">
                                <li class="px-3 py-2 text-muted small">
                                    Signed in as <strong>@User.Identity.Name</strong>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a asp-controller="Dashboard" asp-action="Index" class="dropdown-item d-flex align-items-center gap-2">
                                        <i class="fas fa-chart-line text-success"></i> Dashboard
                                    </a>
                                </li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item d-flex align-items-center gap-2 text-danger">
                                            <i class="fas fa-sign-out-alt"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-sm px-4 fw-semibold">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm px-4 fw-semibold">Register</a>
                    }

                    <!-- Mobile Menu Toggle -->
                    <button class="btn d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
                        <i class="fas fa-bars fa-lg"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main class="flex-grow-1 py-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-white border-top py-4">
        <div class="container text-center text-muted">
            &copy; @DateTime.Now.Year <strong>EventHub</strong> - All rights reserved.
        </div>
    </footer>

    <!-- Mobile Offcanvas Menu -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title fw-bold text-success" id="mobileMenuLabel">EventHub</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column gap-3">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link fs-5">Home</a></li>
                <li><a asp-controller="Home" asp-action="Contact" class="nav-link fs-5">Contact</a></li>
                <!-- Add more mobile menu items here -->
            </ul>
        </div>
    </div>

    @await Html.PartialAsync("_WhatsAppChatButton.cshtml")
    @await Html.PartialAsync("_SweetAlertPartial.cshtml")
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>