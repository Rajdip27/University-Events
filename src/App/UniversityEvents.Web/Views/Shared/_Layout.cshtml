<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EventHub</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --emerald: #10b981;
            --emerald-dark: #059669;
            --teal: #14b8a6;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #f9fafb;
        }

        /* Header */
        header {
            position: sticky;
            top: 0;
            z-index: 1020;
            background: rgba(255, 255, 255, 0.97);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid #e5e7eb;
            box-shadow: 0 4px 20px rgba(16, 185, 129, 0.08);
        }

        /* Logo */
        .logo span {
            background: linear-gradient(135deg, var(--emerald), var(--teal));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 800;
        }

        .logo i {
            color: var(--emerald);
        }

        /* Nav */
        .nav-link {
            font-weight: 600;
            color: #374151 !important;
            position: relative;
        }

            .nav-link:hover,
            .nav-link.active {
                color: var(--emerald) !important;
            }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 3px;
                bottom: -8px;
                left: 50%;
                background: linear-gradient(90deg, var(--emerald), var(--teal));
                border-radius: 2px;
                transform: translateX(-50%);
                transition: .3s;
            }

            .nav-link:hover::after,
            .nav-link.active::after {
                width: 80%;
            }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, var(--emerald), var(--teal));
            border: none;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, var(--emerald-dark), #0d9488);
                transform: translateY(-2px);
            }

        .btn-outline-primary {
            border-color: var(--emerald);
            color: var(--emerald);
            font-weight: 600;
        }

            .btn-outline-primary:hover {
                background: var(--emerald);
                color: #fff;
            }

        /* User Section */
        .user-actions {
            background: #fff;
            padding: 6px 10px;
            border-radius: 999px;
            box-shadow: 0 6px 18px rgba(0,0,0,.06);
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--emerald), var(--teal));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .user-avatar i {
                color: #fff;
                font-size: 18px;
            }
    </style>
</head>
<body>

    <header>
        <div class="container">
            <div class="d-flex align-items-center justify-content-between py-3">

                <!-- Logo -->
                <a asp-controller="Home" asp-action="Index"
                   class="d-flex align-items-center text-decoration-none logo">
                    <i class="fas fa-calendar-alt fa-2x me-2"></i>
                    <span class="fs-3">EventHub</span>
                </a>

                <!-- Desktop Nav -->
                <nav class="d-none d-lg-block">
                    <ul class="nav gap-4">
                        <li><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                        <li><a asp-controller="Events" asp-action="Index" class="nav-link">Events</a></li>
                        <li><a asp-controller="Categories" asp-action="Index" class="nav-link">Categories</a></li>
                        <li><a asp-controller="Home" asp-action="About" class="nav-link">About</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>
                    </ul>
                </nav>

                <!-- User Actions -->
                <div class="d-flex align-items-center gap-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="d-flex align-items-center gap-2 user-actions">
                            <div class="user-avatar">
                                <i class="fa-solid fa-circle-user"></i>
                            </div>

                            <span class="fw-semibold d-none d-md-inline">
                                @User.Identity.Name
                            </span>

                            <a asp-controller="Dashboard" asp-action="Index"
                               class="btn btn-outline-success btn-sm px-3">
                                <i class="fas fa-chart-line me-1"></i>
                                <span class="d-none d-lg-inline">Dashboard</span>
                            </a>

                            <a asp-controller="Account" asp-action="Logout"
                               class="btn btn-outline-danger btn-sm px-3">
                                <i class="fas fa-sign-out-alt me-1"></i>
                                <span class="d-none d-lg-inline">Logout</span>
                            </a>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"
                           class="btn btn-outline-primary btn-sm px-3 fw-semibold">
                            Login
                        </a>

                        <a asp-controller="Account" asp-action="Register"
                           class="btn btn-primary btn-sm px-3 fw-semibold">
                            Register
                        </a>
                    }

                    <!-- Mobile Menu Button -->
                    <button class="btn d-lg-none"
                            type="button"
                            data-bs-toggle="offcanvas"
                            data-bs-target="#mobileMenu">
                        <i class="fas fa-bars fa-lg"></i>
                    </button>
                </div>

            </div>
        </div>
    </header>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light border-top py-4 mt-auto">
        <div class="container text-center text-muted">
            © @DateTime.Now.Year <strong>EventHub</strong>
        </div>
    </footer>

    <!-- Mobile Menu -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu">
        <div class="offcanvas-header">
            <h5 class="fw-bold text-success">EventHub</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column gap-2">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                <li><a asp-controller="Events" asp-action="Index" class="nav-link">Events</a></li>
                <li><a asp-controller="Categories" asp-action="Index" class="nav-link">Categories</a></li>
                <li><a asp-controller="Home" asp-action="About" class="nav-link">About</a></li>
                <li><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>
            </ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
