    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script>
        // DOM Elements
        const body = document.body;
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const toggleBtn = document.getElementById('toggleSidebar');
        const overlay = document.getElementById('overlay');
        const themeToggle = document.getElementById('toggleTheme');
        const themeIcon = document.getElementById('themeIcon');
        const pageTitle = document.getElementById('pageTitle');

        // Check initial screen width
        let isMobile = window.innerWidth < 992;

        // Theme Management
        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            body.setAttribute('data-theme', savedTheme);
            updateThemeIcon(savedTheme);
        }

        function updateThemeIcon(theme) {
            themeIcon.className = theme === 'light' ? 'ri-moon-line' : 'ri-sun-line';
        }

        themeToggle.addEventListener('click', () => {
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        });

        // Sidebar Management
        function toggleSidebar() {
            if (isMobile) {
                // On mobile, toggle the active class
                sidebar.classList.toggle('active');
                overlay.classList.toggle('active');
                document.body.style.overflow = sidebar.classList.contains('active') ? 'hidden' : '';
            } else {
                // On desktop, toggle collapsed state
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');

                // Update page title based on sidebar state
                const isCollapsed = sidebar.classList.contains('collapsed');
                pageTitle.textContent = isCollapsed ? 'Admin' : 'Dashboard Overview';
            }
        }

        toggleBtn.addEventListener('click', toggleSidebar);

        // Close sidebar when clicking overlay on mobile
        overlay.addEventListener('click', () => {
            if (isMobile) {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            }
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', (e) => {
            if (isMobile &&
                sidebar.classList.contains('active') &&
                !sidebar.contains(e.target) &&
                !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            }
        });

        // Active nav item
        const navItems = document.querySelectorAll('.nav-item');
        navItems.forEach(item => {
            item.addEventListener('click', function(e) {
                // Don't prevent default for anchor tags with href
                if (this.getAttribute('href') === '#') {
                    e.preventDefault();
                }

                navItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');

                // Update page title
                const itemText = this.querySelector('.nav-text').textContent;
                pageTitle.textContent = itemText;

                // Close sidebar on mobile after click
                if (isMobile) {
                    sidebar.classList.remove('active');
                    overlay.classList.remove('active');
                    document.body.style.overflow = '';
                }
            });
        });

        // Window resize handler
        function handleResize() {
            isMobile = window.innerWidth < 992;

            if (!isMobile) {
                // On desktop, ensure sidebar is visible and overlay is hidden
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';

                // Restore collapsed state if it was collapsed
                const wasCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
                if (wasCollapsed) {
                    sidebar.classList.add('collapsed');
                    mainContent.classList.add('expanded');
                } else {
                    sidebar.classList.remove('collapsed');
                    mainContent.classList.remove('expanded');
                }
            } else {
                // On mobile, ensure sidebar is hidden initially
                sidebar.classList.remove('collapsed');
                mainContent.classList.remove('expanded');
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
            }
        }

        // Save sidebar state
        sidebar.addEventListener('transitionend', () => {
            if (!isMobile) {
                localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
            }
        });

        // Timezone detection
        document.addEventListener("DOMContentLoaded", function() {
            initTheme();
            handleResize();

            // Load saved sidebar state
            if (!isMobile) {
                const savedSidebarState = localStorage.getItem('sidebarCollapsed') === 'true';
                if (savedSidebarState) {
                    sidebar.classList.add('collapsed');
                    mainContent.classList.add('expanded');
                    pageTitle.textContent = 'Admin';
                }
            }

            // Timezone detection
            var timezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
            console.log("Detected timezone:", timezone);

            fetch('/Home/SetTimeZone', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ timeZone: timezone })
            })
            .then(response => console.log("Timezone set:", response.status))
            .catch(err => console.error("Timezone error:", err));

            // Add animation delay to cards
            const cards = document.querySelectorAll('.dashboard-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });

        // Handle window resize
        window.addEventListener('resize', handleResize);

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            // Close sidebar with Escape key
            if (e.key === 'Escape' && isMobile && sidebar.classList.contains('active')) {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            }

            // Toggle sidebar with Ctrl+Shift+S
            if (e.ctrlKey && e.shiftKey && e.key === 'S') {
                e.preventDefault();
                toggleSidebar();
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>