<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body class="dashboard-bg">

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h2>Dashboard</h2>
        <a href="#"><i class="ri-home-4-line"></i> Dashboard</a>
        <a asp-action="Index" asp-controller="Category"><i class="ri-user-line"></i> Category</a>
        <a asp-action="Index" asp-controller="Event"><i class="ri-user-line"></i>Event</a>
        <a href="#"><i class="ri-settings-3-line"></i> Settings</a>

        <!-- Logout -->
        <form asp-action="Logout" asp-controller="Account" method="post" style="margin-top: 20px;">
            <button type="submit" class="btn btn-danger w-100 text-start">
                <i class="ri-logout-box-line"></i> Logout
            </button>
        </form>
    </div>

    <!-- Overlay -->
    <div class="overlay" id="overlay"></div>

    <!-- Main Content -->
    <div class="main" id="mainContent">
        <div class="topbar" id="topbar">
            <button id="toggleSidebar"><i class="ri-menu-line"></i></button>
            <div>ইভেন্ট</div>
            <button id="toggleTheme"><i id="themeIcon" class="ri-moon-line"></i></button>
        </div>

        <div style="margin-top:20px;">
            @RenderBody()
        </div>
    </div>

    @await Html.PartialAsync("_SweetAlertPartial")

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/admin.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
