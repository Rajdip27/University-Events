@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Admin Dashboard</title>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --light-color: #f8f9fa;
            --sidebar-width: 260px;
            --sidebar-collapsed: 70px;
            --topbar-height: 70px;
            --transition: all .3s ease;
        }

        body {
            background: var(--light-color);
            overflow-x: hidden;
        }

        /* ===== LAYOUT ===== */
        .layout-container {
            display: flex;
            min-height: 100vh;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg,var(--primary-color),var(--secondary-color));
            position: fixed;
            height: 100vh;
            color: #fff;
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            z-index: 1000;
        }

            .sidebar.collapsed {
                width: var(--sidebar-collapsed);
            }

        .sidebar-header {
            padding: 20px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-text {
            transition: var(--transition);
        }

        .sidebar.collapsed .logo-text {
            display: none;
        }

        /* ===== NAV ===== */
        .nav-container {
            flex: 1;
            padding: 10px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: #fff;
            border-radius: 10px;
            margin-bottom: 6px;
            text-decoration: none;
            transition: var(--transition);
        }

            .nav-item:hover {
                background: rgba(255,255,255,.15);
            }

            .nav-item.active {
                background: rgba(255,255,255,.25);
                font-weight: 600;
                box-shadow: inset 4px 0 0 #fff;
            }

        .nav-icon {
            font-size: 20px;
            min-width: 26px;
        }

        .nav-text {
            margin-left: 12px;
            white-space: nowrap;
        }

        .sidebar.collapsed .nav-text {
            display: none;
        }

        /* ===== LOGOUT ===== */
        .sidebar-footer {
            padding: 15px;
            border-top: 1px solid rgba(255,255,255,.2);
        }

        .logout-btn {
            width: 100%;
            background: rgba(255,255,255,.15);
            border: none;
            color: #fff;
            padding: 12px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: var(--transition);
        }

            .logout-btn:hover {
                background: rgba(255,255,255,.25);
            }

        .sidebar.collapsed .logout-btn span {
            display: none;
        }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            margin-left: var(--sidebar-width);
            width: 100%;
            transition: var(--transition);
        }

            .main-content.expanded {
                margin-left: var(--sidebar-collapsed);
            }

        /* ===== TOPBAR ===== */
        .topbar {
            height: var(--topbar-height);
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 15px;
            box-shadow: 0 2px 10px rgba(0,0,0,.08);
            position: sticky;
            top: 0;
            z-index: 900;
        }

        .menu-toggle {
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
        }

        /* ===== MOBILE ===== */
        @@media (max-width: 991px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .main-content,
            .main-content.expanded {
                margin-left: 0;
            }
        }
    </style>
</head>

<body>
    <div class="layout-container">

        <!-- ===== SIDEBAR ===== -->
        <aside class="sidebar" id="sidebar">

            <div class="sidebar-header">
                <i class="ri-dashboard-line fs-4"></i>
                <span class="logo-text">
                    Event Hub
                </span>
            </div>

            <div class="nav-container">

                <a asp-controller="Dashboard" asp-action="Index"
                   class="nav-item @(currentController == "Dashboard" ? "active" : "")">
                    <i class="ri-home-4-line nav-icon"></i>
                    <span class="nav-text">Dashboard</span>
                </a>

                @if (User.IsInRole("Administrator"))
                {
                    <a asp-controller="Category" asp-action="Index"
                       class="nav-item @(currentController == "Category" ? "active" : "")">
                        <i class="ri-list-check nav-icon"></i>
                        <span class="nav-text">Categories</span>
                    </a>

                    <a asp-controller="Event" asp-action="Index"
                       class="nav-item @(currentController == "Event" ? "active" : "")">
                        <i class="ri-calendar-event-line nav-icon"></i>
                        <span class="nav-text">Events</span>
                    </a>

                    <a asp-controller="User" asp-action="Index"
                       class="nav-item @(currentController == "User" ? "active" : "")">
                        <i class="ri-user-line nav-icon"></i>
                        <span class="nav-text">Users</span>
                    </a>
                }

                @if (User.IsInRole("Student"))
                {
                    <a asp-controller="StudentRegistration" asp-action="Index"
                       class="nav-item @(currentController == "StudentRegistration" ? "active" : "")">
                        <i class="ri-calendar-event-line nav-icon"></i>
                        <span class="nav-text">Registration</span>
                    </a>

                    <a asp-controller="PaymentHistory" asp-action="Index"
                       class="nav-item @(currentController == "PaymentHistory" ? "active" : "")">
                        <i class="ri-calendar-event-line nav-icon"></i>
                        <span class="nav-text">Payment</span>
                    </a>
                }

            </div>

            <div class="sidebar-footer">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="logout-btn">
                        <i class="ri-logout-box-line fs-5"></i>
                        <span>Logout</span>
                    </button>
                </form>
            </div>

        </aside>

        <!-- ===== MAIN ===== -->
        <main class="main-content" id="mainContent">

            <div class="topbar">
                <button class="menu-toggle" id="toggleSidebar">
                    <i class="ri-menu-line"></i>
                </button>

                <div class="fw-semibold"></div>

                <div class="d-flex align-items-center gap-2">
                    <i class="ri-user-line"></i>
                    <span class="d-none d-md-inline">@User.Identity?.Name</span>
                </div>
            </div>

            <div class="p-4">
                @RenderBody()
            </div>

        </main>

    </div>
    @await Html.PartialAsync("_SweetAlertPartial.cshtml")

    <script>
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("mainContent");
        const toggle = document.getElementById("toggleSidebar");

        toggle.addEventListener("click", () => {
            if (window.innerWidth < 992) {
                sidebar.classList.toggle("active");
            } else {
                sidebar.classList.toggle("collapsed");
                mainContent.classList.toggle("expanded");
            }
        });


         
                function setUserTimeZone() {
            const timeZone = Intl.DateTimeFormat().resolvedOptions().timeZone;

            fetch('/home/SetTimeZone', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ TimeZone: timeZone })
            })
            .then(response => response.json())
            .then(data => {
                if(data.success){
                    console.log('TimeZone saved:', data.timeZone);
                }
            })
            .catch(error => console.error('Error setting timezone:', error));
        }

        // Call on page load
        window.addEventListener('DOMContentLoaded', setUserTimeZone);

 

    </script>

    @RenderSection("Scripts", false)
</body>
</html>
