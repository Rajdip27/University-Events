@model UniversityEvents.Core.Entities.Payment
@{
    Layout = null;
}

<body style="margin:0; padding:0;">
    <div style="width:210mm; min-height:297mm; padding:20mm; box-sizing:border-box; position:relative; font-family:Arial,sans-serif; background:#fff;">

        <!-- Watermark -->
        @if (Model.Registration.PaymentStatus == "Paid")
        {
            <div style="
                position:absolute;
                top:50%;
                left:50%;
                transform: translate(-50%, -50%) rotate(-45deg);
                font-size:100px;
                font-weight:bold;
                color:rgba(0,0,0,0.05);
                z-index:0;
                white-space:nowrap;
                pointer-events:none;">
                PAID
            </div>
        }

        <!-- Invoice Content -->
        <div style="position:relative; z-index:1;">

            <!-- Header -->
            <div style="margin-bottom:20px;">
                <h2 style="margin:0; font-size:28px; font-weight:bold; color:#2c3e50;">Registration: @Model.InvoiceNumber</h2>
                <span style="color:#7f8c8d; font-size:14px;">Date: @DateTime.Now.ToString("MMMM dd, yyyy")</span>
            </div>

            <!-- Details -->
            <div style="display:flex; justify-content:space-between; margin-bottom:30px;">

                <div style="width:30%; border-left:4px solid #3498db; padding-left:10px;">
                    <strong>Participant</strong>
                    <p>@Model.Registration.FullName</p>
                    <p><a href="mailto:@Model.Registration.Email" style="color:#3498db; text-decoration:none;">@Model.Registration.Email</a></p>
                </div>

                <div style="width:30%; border-left:4px solid #3498db; padding-left:10px;">
                    <strong>Event</strong>
                    <p>@Model.Registration.Event.Name</p>
                </div>

                <div style="width:30%; border-left:4px solid #3498db; padding-left:10px;">
                    <strong>Payment Status</strong>
                    <p style="display:inline-block; padding:4px 8px; border-radius:6px; font-weight:bold; font-size:12px; color:#fff; background-color:@(Model.Registration.PaymentStatus == "Paid" ? "#27ae60" : Model.Registration.PaymentStatus == "Pending" ? "#f39c12" : "#e74c3c"); margin:5px 0;">@Model.Registration.PaymentStatus</p>
                    <strong>Bank Name</strong>
                    <p>@Model.PaymentHistory.BankName</p>
                </div>

            </div>

            <!-- Table -->
            <table style="width:100%; border:1px solid #eee; border-spacing:0; margin-bottom:20px;">
                <thead>
                    <tr style="background-color:#f8f9fa; font-weight:bold; color:#2c3e50;">
                        <th style="padding:10px; border-bottom:1px solid #eee;">#</th>
                        <th style="padding:10px; border-bottom:1px solid #eee;">Event Name</th>
                        <th style="padding:10px; border-bottom:1px solid #eee;">Fee</th>
                        <th style="padding:10px; border-bottom:1px solid #eee;">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="padding:10px; border-bottom:1px solid #eee;">1</td>
                        <td style="padding:10px; border-bottom:1px solid #eee;">@Model.Registration.Event.Name</td>
                        <td style="padding:10px; border-bottom:1px solid #eee;">@Model.Amount.ToString("C")</td>
                        <td style="padding:10px; border-bottom:1px solid #eee;">@Model.Amount.ToString("C")</td>
                    </tr>
                </tbody>
            </table>

            <!-- Total -->
            <div style="text-align:right; font-size:20px; font-weight:bold; color:#2c3e50;">
                Total: @Model.Amount.ToString("C")
            </div>

        </div>
    </div>
</body>
