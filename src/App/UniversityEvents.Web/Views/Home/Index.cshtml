@using UniversityEvents.Application.CommonModel
@using UniversityEvents.Application.Helpers
@using UniversityEvents.Application.ViewModel
@model List<EventVm>

<style>
    :root {
        --bg-primary: #0a0012;
        --bg-deep: #0f001f;
        --text-primary: #f0f4ff;
        --text-secondary: #c0c9ff;
        --neon-pink: #ff2eff;
        --neon-cyan: #00faff;
        --neon-violet: #9d00ff;
        --neon-green: #39ff14;
        --card-bg: rgba(20, 10, 40, 0.82);
        --card-border: rgba(157, 0, 255, 0.28);
        --glow-pink: 0 0 30px rgba(255,46,255,0.5);
        --glow-cyan: 0 0 40px rgba(0,250,255,0.45);
        --glow-strong: 0 0 60px rgba(157,0,255,0.7), 0 0 100px rgba(0,250,255,0.4);
    }

    body {
        background: var(--bg-primary);
        color: var(--text-primary);
        min-height: 100vh;
        margin: 0;
        font-family: 'Inter', system-ui, sans-serif;
        overflow-x: hidden;
        position: relative;
    }

    /* Background */
    .bg-cyber {
        position: fixed;
        inset: 0;
        z-index: -2;
        pointer-events: none;
        background: radial-gradient(circle at 20% 30%, rgba(157,0,255,0.12), transparent 45%), radial-gradient(circle at 80% 70%, rgba(0,250,255,0.10), transparent 55%);
    }

        .bg-cyber::before,
        .bg-cyber::after,
        .bg-cyber span {
            content: '';
            position: absolute;
            border-radius: 50%;
            filter: blur(110px);
            opacity: 0.22;
            animation: neuralPulse 80s infinite ease-in-out;
            background: radial-gradient(circle, var(--neon-violet) 20%, var(--neon-cyan) 70%, transparent);
        }

        .bg-cyber::before {
            width: 1000px;
            height: 1000px;
            top: -25%;
            left: -25%;
            animation-delay: 0s;
        }

        .bg-cyber::after {
            width: 1200px;
            height: 1200px;
            bottom: -30%;
            right: -30%;
            animation-delay: 25s;
        }

        .bg-cyber span {
            width: 800px;
            height: 800px;
            top: 50%;
            left: 50%;
            animation-delay: 12s;
            animation-duration: 95s;
        }

    @@keyframes neuralPulse {
        0% {
            transform: translate(0,0) scale(1);
            opacity: 0.22;
        }

        20% {
            transform: translate(220px, -180px) scale(1.15);
            opacity: 0.32;
        }

        40% {
            transform: translate(-200px, 220px) scale(0.9);
            opacity: 0.18;
        }

        60% {
            transform: translate(150px, -130px) scale(1.08);
            opacity: 0.28;
        }

        80% {
            transform: translate(-100px, 100px) scale(0.95);
            opacity: 0.20;
        }

        100% {
            transform: translate(0,0) scale(1);
            opacity: 0.22;
        }
    }

    /* Layout */
    .ev-container {
        width: 92%;
        max-width: 1480px;
        margin: 7rem auto 9rem;
        padding: 0 1.5rem;
        position: relative;
        z-index: 1;
    }

    .ev-heading {
        text-align: center;
        font-size: 4rem;
        font-weight: 900;
        letter-spacing: -3px;
        margin: 0 0 5.5rem;
        background: linear-gradient(90deg, var(--neon-pink), var(--neon-cyan), var(--neon-violet), var(--neon-green));
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 40px rgba(157,0,255,0.5);
        animation: titleGlow 6s infinite alternate ease-in-out;
    }

    @@keyframes titleGlow {
        0% {
            text-shadow: 0 0 30px rgba(255,46,255,0.4);
        }

        100% {
            text-shadow: 0 0 70px rgba(0,250,255,0.6);
        }
    }

    .ev-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(370px, 1fr));
        gap: 2.6rem;
    }

    /* Card */
    .ev-card-link {
        text-decoration: none;
        color: inherit;
        display: block;
        perspective: 1400px;
    }

    .ev-card {
        height: 480px;
        border-radius: 28px;
        overflow: hidden;
        background: var(--card-bg);
        backdrop-filter: blur(24px) saturate(200%);
        -webkit-backdrop-filter: blur(24px) saturate(200%);
        border: 1px solid var(--card-border);
        box-shadow: inset 0 2px 0 rgba(255,255,255,0.1), var(--glow-pink);
        transition: all 0.7s cubic-bezier(0.23, 1, 0.32, 1);
        transform: translateZ(0) rotateX(0) rotateY(0);
        opacity: 0;
        transform: translateY(80px) scale(0.92);
        animation: cardEnter 1.2s forwards cubic-bezier(0.22, 0.61, 0.36, 1);
        display: flex;
        flex-direction: column;
    }

    @@keyframes cardEnter {
        to {
            opacity: 1;
            transform: translateY(0) scale(1) rotateX(0) rotateY(0);
        }
    }

    .ev-card:nth-child(odd) {
        animation-delay: 0.2s;
    }

    .ev-card:nth-child(even) {
        animation-delay: 0.4s;
    }

    .ev-card:hover {
        transform: translateY(-28px) translateZ(60px) rotateX(6deg) rotateY(8deg) scale(1.05);
        box-shadow: inset 0 4px 0 rgba(255,255,255,0.15), var(--glow-strong);
        border-color: var(--neon-cyan);
    }

    .ev-img-container {
        height: 280px;
        position: relative;
        overflow: hidden;
        flex-shrink: 0;
    }

        .ev-img-container::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, transparent 40%, var(--bg-deep) 100%);
            opacity: 0.6;
            transition: opacity 0.8s ease;
            z-index: 1;
        }

    .ev-card:hover .ev-img-container::before {
        opacity: 0.85;
    }

    .ev-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 1.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        filter: brightness(0.9) contrast(1.1);
    }

    .ev-card:hover .ev-img {
        transform: scale(1.18);
        filter: brightness(1.3) contrast(1.25) saturate(1.4);
    }

    .ev-content {
        padding: 1.8rem 2rem 2rem;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        z-index: 2;
    }

    .ev-top {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .ev-category {
        display: inline-flex;
        font-size: 0.88rem;
        font-weight: 900;
        padding: 0.5rem 1.3rem;
        border-radius: 999px;
        margin-bottom: 1.2rem;
        background: rgba(157,0,255,0.18);
        color: var(--neon-cyan);
        border: 1px solid var(--neon-pink);
        backdrop-filter: blur(8px);
        letter-spacing: 1.2px;
        text-transform: uppercase;
        box-shadow: 0 0 20px rgba(255,46,255,0.3);
        transition: all 0.6s ease;
        animation: badgePulse 4s infinite alternate;
        align-self: flex-start;
        flex-shrink: 0;
    }

    @@keyframes badgePulse {
        0% {
            box-shadow: 0 0 12px rgba(255,46,255,0.3);
        }

        100% {
            box-shadow: 0 0 30px rgba(0,250,255,0.5);
        }
    }

    .ev-card:hover .ev-category {
        background: linear-gradient(90deg, var(--neon-pink), var(--neon-cyan));
        color: #000;
        border-color: transparent;
        box-shadow: 0 0 40px rgba(0,250,255,0.7);
    }

    .ev-title {
        font-size: 1.7rem;
        font-weight: 900;
        line-height: 1.28;
        margin: 0 0 1rem 0;
        letter-spacing: -0.5px;
        background: linear-gradient(90deg, var(--neon-cyan), var(--neon-pink), var(--neon-violet));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 25px rgba(157,0,255,0.6);
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        flex-grow: 1;
        max-height: 6.5em;
        transition: all 0.6s ease;
    }

    .ev-card:hover .ev-title {
        text-shadow: 0 0 50px rgba(0,250,255,0.8);
    }

    .ev-date {
        font-size: 1.05rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.9rem;
        margin-top: auto;
        padding-top: 0.8rem;
        border-top: 1px solid rgba(157,0,255,0.15);
        flex-shrink: 0;
    }

        .ev-date strong {
            color: var(--neon-green);
            font-weight: 800;
            text-shadow: 0 0 15px rgba(57,255,20,0.5);
        }

    /* Responsive adjustments */
    @@media (max-width: 1024px) {
        .ev-heading {
            font-size: 3.4rem;
        }
    }

    @@media (max-width: 768px) {
        .ev-heading {
            font-size: 2.9rem;
            margin-bottom: 4rem;
        }

        .ev-card {
            height: 460px;
            backdrop-filter: blur(18px);
        }

        .ev-img-container {
            height: 260px;
        }

        .ev-title {
            font-size: 1.55rem;
            -webkit-line-clamp: 2;
            max-height: 4.2em;
        }

        .ev-content {
            padding: 1.5rem 1.6rem 1.8rem;
        }
    }

    @@media (max-width: 480px) {
        .ev-heading {
            font-size: 2.5rem;
        }

        .ev-card {
            height: 430px;
        }

        .ev-img-container {
            height: 240px;
        }

        .ev-title {
            font-size: 1.45rem;
            -webkit-line-clamp: 2;
            max-height: 3.8em;
        }

        .ev-date {
            font-size: 0.98rem;
        }
    }
</style>

<div class="bg-cyber">
    <span></span>
</div>

<div class="ev-container">
    <h1 class="ev-heading">Upcoming Events</h1>

    <div class="ev-grid">
        @foreach (var ev in Model)
        {
            <a asp-controller="Home" asp-action="EventDetails" asp-route-id="@ev.Id" class="ev-card-link">
                <div class="ev-card">
                    <div class="ev-img-container">
                        <img class="ev-img"
                             src="~/@UrlHelpers.GetEventImageUrl(ev.ImageUrl, CommonVariables.EventLocation)"
                             alt="@ev.Name"
                             loading="lazy" />
                    </div>

                    <div class="ev-content">
                        <div class="ev-top">
                            <span class="ev-category">@ev.Category.Name</span>
                            <div class="ev-title">@ev.Name</div>
                        </div>

                        <div class="ev-date">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            <span>Ends <strong>@ev.EndDate.ToString("dd MMM yyyy")</strong></span>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>

<script>
    document.addEventListener('mousemove', e => {
        const x = (e.clientX / window.innerWidth - 0.5) * 80;
        const y = (e.clientY / window.innerHeight - 0.5) * 80;
        document.querySelector('.bg-cyber').style.transform = `translate(${x}px, ${y}px)`;
    });
</script>