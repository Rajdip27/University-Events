@using UniversityEvents.Application.CommonModel
@using UniversityEvents.Application.Helpers
@using UniversityEvents.Application.ViewModel
@model EventVm

<style>
    :root {
        --bg-primary: #0a0012;
        --bg-deep: #0f001f;
        --text-primary: #f0f4ff;
        --text-secondary: #c0c9ff;
        --neon-pink: #ff2eff;
        --neon-cyan: #00faff;
        --neon-violet: #9d00ff;
        --neon-green: #39ff14;
        --card-bg: rgba(20, 10, 40, 0.82);
        --card-border: rgba(157, 0, 255, 0.28);
        --glow-pink: 0 0 30px rgba(255,46,255,0.5);
        --glow-cyan: 0 0 40px rgba(0,250,255,0.45);
        --glow-strong: 0 0 60px rgba(157,0,255,0.7), 0 0 100px rgba(0,250,255,0.4);
        --radius: 28px;
        --transition: all 0.7s cubic-bezier(0.23, 1, 0.32, 1);
    }

    body {
        background: var(--bg-primary);
        color: var(--text-primary);
        min-height: 100vh;
        margin: 0;
        font-family: 'Inter', system-ui, sans-serif;
        overflow-x: hidden;
        position: relative;
    }

    /* Background - same as list page */
    .bg-cyber {
        position: fixed;
        inset: 0;
        z-index: -2;
        pointer-events: none;
        background: radial-gradient(circle at 20% 30%, rgba(157,0,255,0.12), transparent 45%), radial-gradient(circle at 80% 70%, rgba(0,250,255,0.10), transparent 55%);
    }

        .bg-cyber::before,
        .bg-cyber::after,
        .bg-cyber span {
            content: '';
            position: absolute;
            border-radius: 50%;
            filter: blur(110px);
            opacity: 0.22;
            animation: neuralPulse 80s infinite ease-in-out;
            background: radial-gradient(circle, var(--neon-violet) 20%, var(--neon-cyan) 70%, transparent);
        }

        .bg-cyber::before {
            width: 1000px;
            height: 1000px;
            top: -25%;
            left: -25%;
            animation-delay: 0s;
        }

        .bg-cyber::after {
            width: 1200px;
            height: 1200px;
            bottom: -30%;
            right: -30%;
            animation-delay: 25s;
        }

        .bg-cyber span {
            width: 800px;
            height: 800px;
            top: 50%;
            left: 50%;
            animation-delay: 12s;
            animation-duration: 95s;
        }

    @@keyframes neuralPulse {
        0% {
            transform: translate(0,0) scale(1);
            opacity: 0.22;
        }

        20% {
            transform: translate(220px, -180px) scale(1.15);
            opacity: 0.32;
        }

        40% {
            transform: translate(-200px, 220px) scale(0.9);
            opacity: 0.18;
        }

        60% {
            transform: translate(150px, -130px) scale(1.08);
            opacity: 0.28;
        }

        80% {
            transform: translate(-100px, 100px) scale(0.95);
            opacity: 0.20;
        }

        100% {
            transform: translate(0,0) scale(1);
            opacity: 0.22;
        }
    }

    .eventhub-page {
        padding: 6rem 1.5rem 4rem;
        position: relative;
        z-index: 1;
    }

    .eventhub-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .eventhub-hero {
        position: relative;
        height: 500px;
        border-radius: var(--radius);
        overflow: hidden;
        margin-bottom: 3rem;
        border: 1px solid var(--card-border);
        box-shadow: var(--glow-pink);
        backdrop-filter: blur(8px);
        transition: var(--transition);
    }

        .eventhub-hero:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: var(--glow-strong);
            border-color: var(--neon-cyan);
        }

    .eventhub-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 1.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        filter: brightness(0.7) contrast(1.2);
    }

    .eventhub-hero:hover .eventhub-image {
        transform: scale(1.12);
        filter: brightness(1.1) contrast(1.3) saturate(1.4);
    }

    .eventhub-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to bottom, transparent 30%, var(--bg-deep) 85%);
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 3rem;
    }

    .eventhub-category {
        display: inline-flex;
        font-size: 1rem;
        font-weight: 900;
        padding: 0.6rem 1.6rem;
        border-radius: 999px;
        background: rgba(157,0,255,0.18);
        color: var(--neon-cyan);
        border: 1px solid var(--neon-pink);
        backdrop-filter: blur(8px);
        letter-spacing: 1.2px;
        text-transform: uppercase;
        box-shadow: 0 0 20px rgba(255,46,255,0.3);
        margin-bottom: 1.2rem;
        animation: badgePulse 4s infinite alternate;
    }

    @@keyframes badgePulse {
        0% {
            box-shadow: 0 0 12px rgba(255,46,255,0.3);
        }

        100% {
            box-shadow: 0 0 30px rgba(0,250,255,0.5);
        }
    }

    .eventhub-title {
        font-size: 3.2rem;
        font-weight: 900;
        line-height: 1.15;
        margin: 0 0 1rem;
        background: linear-gradient(90deg, var(--neon-cyan), var(--neon-pink), var(--neon-violet));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 40px rgba(157,0,255,0.6);
    }

    .eventhub-content {
        background: var(--card-bg);
        backdrop-filter: blur(24px) saturate(200%);
        border-radius: var(--radius);
        border: 1px solid var(--card-border);
        padding: 3rem;
        box-shadow: inset 0 2px 0 rgba(255,255,255,0.1), var(--glow-pink);
        animation: fadeIn 1s forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .eventhub-description {
        font-size: 1.2rem;
        line-height: 1.8;
        color: var(--text-secondary);
        margin-bottom: 3rem;
    }

    .eventhub-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .eventhub-info-card {
        background: rgba(30, 20, 50, 0.7);
        backdrop-filter: blur(16px);
        border-radius: var(--radius);
        padding: 2rem;
        border: 1px solid rgba(157,0,255,0.25);
        transition: var(--transition);
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

        .eventhub-info-card:hover {
            transform: translateY(-16px) scale(1.03);
            box-shadow: var(--glow-strong);
            border-color: var(--neon-cyan);
        }

        .eventhub-info-card strong {
            font-size: 1.3rem;
            color: var(--neon-cyan);
            text-shadow: 0 0 15px rgba(0,250,255,0.5);
        }

        .eventhub-info-card span {
            font-size: 1.15rem;
            color: var(--text-primary);
            font-weight: 600;
        }

    .eventhub-actions {
        display: flex;
        gap: 1.8rem;
        flex-wrap: wrap;
    }

    .eventhub-button {
        background: linear-gradient(90deg, var(--neon-pink), var(--neon-cyan));
        color: #000;
        padding: 1.2rem 3rem;
        border: none;
        border-radius: 50px;
        font-size: 1.2rem;
        font-weight: 900;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: 0 0 30px rgba(255,46,255,0.5);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .eventhub-button:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 0 60px rgba(0,250,255,0.7);
        }

    .eventhub-back {
        display: inline-flex;
        align-items: center;
        gap: 1rem;
        color: var(--neon-cyan);
        font-weight: 700;
        font-size: 1.15rem;
        text-decoration: none;
        transition: var(--transition);
    }

        .eventhub-back:hover {
            color: var(--neon-pink);
            transform: translateX(-8px);
        }

    /* Responsive */
    @@media (max-width: 1024px) {
        .eventhub-hero {
            height: 420px;
        }

        .eventhub-title {
            font-size: 2.8rem;
        }
    }

    @@media (max-width: 768px) {
        .eventhub-page {
            padding: 5rem 1rem 3rem;
        }

        .eventhub-hero {
            height: 360px;
        }

        .eventhub-title {
            font-size: 2.4rem;
        }

        .eventhub-content {
            padding: 2rem;
        }

        .eventhub-actions {
            flex-direction: column;
        }

        .eventhub-button {
            width: 100%;
            text-align: center;
        }
    }

    @@media (max-width: 480px) {
        .eventhub-hero {
            height: 300px;
        }

        .eventhub-title {
            font-size: 2rem;
        }

        .eventhub-info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="bg-cyber">
    <span></span>
</div>

<div class="eventhub-page">
    <div class="eventhub-container">
        <div class="eventhub-hero">
            <img class="eventhub-image"
                 src="~/@UrlHelpers.GetEventImageUrl(Model.ImageUrl, CommonVariables.EventLocation)"
                 alt="@Model.Name"
                 loading="lazy" />
            <div class="eventhub-overlay">
                <span class="eventhub-category">@Model.Category.Name</span>
                <h1 class="eventhub-title">@Model.Name</h1>
            </div>
        </div>

        <div class="eventhub-content">
            <p class="eventhub-description">
                @Model.Description
            </p>

            <div class="eventhub-info-grid">
                <div class="eventhub-info-card">
                    <strong>Start Date</strong>
                    <span>@Model.StartDate.ToString("dddd, MMMM dd, yyyy")</span>
                    <span style="font-size: 1rem; color: var(--text-secondary);">
                        @Model.StartDate.ToString("hh:mm tt")
                    </span>
                </div>

                <div class="eventhub-info-card">
                    <strong>End Date</strong>
                    <span>@Model.EndDate.ToString("dddd, MMMM dd, yyyy")</span>
                    <span style="font-size: 1rem; color: var(--text-secondary);">
                        @Model.EndDate.ToString("hh:mm tt")
                    </span>
                </div>

                <div class="eventhub-info-card">
                    <strong>Registration Fee</strong>
                    <span>@Model.RegistrationFee</span>
                    @if (Model.RegistrationFee == 0 || Model.RegistrationFee == null)
                    {
                        <span style="color: var(--neon-green); font-weight: 900; text-shadow: 0 0 15px rgba(57,255,20,0.6);">
                            FREE ENTRY!
                        </span>
                    }
                </div>
            </div>

            <div class="eventhub-actions">
                <a class="eventhub-button"
                   asp-controller="StudentRegistration"
                   asp-action="Register"
                   asp-route-slug="@Model.Slug"
                   asp-route-referrerId="@Model.Id">
                    Register Now
                </a>

                <a asp-controller="Event" asp-action="Index" class="eventhub-back">
                    ← Back to Events
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('mousemove', e => {
        const x = (e.clientX / window.innerWidth - 0.5) * 80;
        const y = (e.clientY / window.innerHeight - 0.5) * 80;
        document.querySelector('.bg-cyber').style.transform = `translate(${x}px, ${y}px)`;
    });
</script>